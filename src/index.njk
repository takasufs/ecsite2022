title: Topページ
layout: layout.njk
csspath: ./css/
---
<header class="flex">
<h1><a href="../index.html"><img src="./img/logo.jpg" alt="" class="logo"></a></h1>
<h2><a href="../cart/index.html"><img src="./img/cart.svg" alt="" class="cart"></a></h2>
</header>

<main>
<ul class=" flex">
	{% for good in goods %}
	<li class="flex-li">
		<a href="../goods/{{ good.url }}">
			<img src="../img/{{good.itemphotos[0]}}" alt="">
			<h3> {{ good.name }} </h3>
			<p> {{ good.price }}円 </p>
			<p> 
				{% if good.state %}
				{% else %}
					soleout
				{% endif %}
			</p>
		</a></li>
	{% endfor %}
</ul>
</main>

<footer>

</footer>